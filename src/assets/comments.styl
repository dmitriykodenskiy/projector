.comment-wrapper, .sub-comment-wrapper, .sub-sub-comment-wrapper
  display flex
  margin 20px
  &__avatar
      width 60px
      height 60px
      margin-right 10px
.comment-block
    &__comment-title
        position relative
        margin-right: 30px
        &:after
            display inline
            content ""
            width 5px
            height 5px
            margin 0 10px
            background-color #ddd
            border-radius 5px
            position: absolute
            top 7px
            left 102%

    &__publishDate
      font-size 12px
      color #A8A8A8

    .actions 
        a
            color #A8A8A8
            margin-right 5px
            cursor pointer
